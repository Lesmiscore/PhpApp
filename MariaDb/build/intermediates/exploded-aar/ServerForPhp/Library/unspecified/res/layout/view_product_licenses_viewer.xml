<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <ListView
        android:id="@+id/list_licenses"
        android:layout_height="match_parent" android:layout_width="match_parent"
        android:divider="#EEEEEE" android:dividerHeight="1dp"
    />
    <Button
        android:id="@+id/button_back" android:visibility="gone"
        android:layout_height="50dp" android:layout_width="match_parent"
        android:text="@string/back_to_licenses" style="@style/Widget.AppCompat.Button.Borderless"
        android:gravity="left|center_vertical" android:drawablePadding="10dp"
    />
    <ScrollView android:id="@+id/content_license_container" android:layout_height="match_parent" android:layout_width="match_parent" android:layout_marginTop="50dp" android:visibility="gone">
        <TextView
            android:id="@+id/content_license"
            android:layout_height="wrap_content" android:layout_width="match_parent"
            android:scrollbars="vertical" android:paddingLeft="10dp" android:paddingRight="10dp"
            />
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent" android:layout_height="100dp"
        android:gravity="center" android:padding="20dp"
        android:id="@+id/preloader_container"
        android:background="#FFFFFF"
        >
        <ProgressBar
            android:id="@+id/preloader"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
        />
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/loading_text"
        />
    </LinearLayout>
</merge><!-- From: file:/home/tautvydas/Documents/Development/Java/ServerForPhp/Library/src/main/res/layout/view_product_licenses_viewer.xml -->