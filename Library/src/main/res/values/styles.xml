<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="Preference" parent="@style/ThemeApplication">
		<item name="android:textAppearanceLarge">@style/TextAppearanceLarge</item>
		<item name="android:textAppearanceMedium">@style/TextAppearanceMedium</item>
		<item name="android:preferenceStyle">@style/PreferenceStyle</item>
		<item name="android:checkBoxPreferenceStyle">@style/CheckboxPreferenceStyle</item>
		<item name="android:preferenceScreenStyle">@style/PreferenceStyle</item>
	</style>
	<style name="PreferenceStyle">
		<item name="android:layout">@layout/preference</item>
	</style>
	<style name="CheckboxPreferenceStyle" parent="@style/PreferenceStyle">
		<item name="android:widgetLayout">@layout/preference_widget_checkbox</item>
	</style>
	<style name="TextAppearanceLarge" parent="android:TextAppearance.Large">
		<item name="android:textColor">?android:attr/textColorPrimary</item>
		<item name="android:textSize">5dp</item>
	</style>
	<style name="TextAppearanceMedium" parent="android:TextAppearance.Medium">
		<item name="android:textColor">?android:attr/textColorPrimary</item>
	</style>
	<style name="TextAppearanceSmall" parent="android:TextAppearance.Small">
		<item name="android:textColor">?android:attr/textColorPrimary</item>
	</style>
	<style name="Toolbar" parent="Toolbar.Base" />
	<style name="Toolbar.Base" parent="@style/ThemeApplication">
		<item name="drawerArrowStyle">@style/Toolbar.DrawerArrowToggle</item>
	</style>
	<style name="Toolbar.DrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
		<item name="color">?android:attr/textColorPrimary</item>
	</style>
	<style name="SettingsModules" />
	<style name="SettingsModules.SelectAll" />
	<style name="SettingsModules.SelectAll.CheckboxContainer">
		<item name="android:layout_width">@dimen/preference_widget_width</item>
		<item name="android:layout_marginRight">?android:scrollbarSize</item>
	</style>
	<style name="SettingsModules.SelectAll.Checkbox">
		<item name="android:layout_gravity">center</item>
	</style>
	<style name="ErrorField">
		<item name="android:textSize">12dp</item>
		<item name="android:background">@color/error</item>
		<item name="android:textColor">#FFFFFF</item>
	</style>
	<style name="DialogAlertTheme" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
		<item name="buttonBarStyle">@style/DialogAlertButtonBar</item>
	</style>
	<style name="DialogAlertButtonBar">
		<item name="android:background">@color/toolbar_background</item>
	</style>
</resources>