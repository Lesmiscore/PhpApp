<?xml version="1.0" encoding="utf-8"?>
<TabHost
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:id="@+id/tabhost"
>
	<LinearLayout android:orientation="vertical" android:layout_height="match_parent" android:layout_width="match_parent">

		<TabWidget android:id="@android:id/tabs" android:layout_height="wrap_content" android:layout_width="match_parent" />

		<FrameLayout android:id="@android:id/tabcontent" android:layout_height="match_parent" android:layout_width="match_parent" android:background="#FFFFFF"/>

	</LinearLayout>
</TabHost>